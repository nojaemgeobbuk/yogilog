{
  "expo": {
    "name": "Yogilog",
    "slug": "yogilog",
    "version": "1.0.0",
    "newArchEnabled": true,
    "orientation": "portrait",
    "icon": "./assets/images/icon.png",
    "scheme": "yogilog",
    "userInterfaceStyle": "dark",
    "splash": {
      "image": "./assets/images/splash-icon.png",
      "resizeMode": "contain",
      "backgroundColor": "#121216"
    },
    "ios": {
      "supportsTablet": true,
      "bundleIdentifier": "com.yogilog.app",
      "infoPlist": {
        "NSPhotoLibraryUsageDescription": "Allow Yogilog to access your photos to add images to your yoga sessions.",
        "ITSAppUsesNonExemptEncryption": false
      }
    },
    "android": {
      "package": "com.yogilog.app",
      "adaptiveIcon": {
        "foregroundImage": "./assets/images/adaptive-icon.png",
        "backgroundColor": "#121216"
      },
      "edgeToEdgeEnabled": true,
      "predictiveBackGestureEnabled": false,
      "permissions": [
        "android.permission.READ_EXTERNAL_STORAGE",
        "android.permission.READ_MEDIA_IMAGES",
        "android.permission.RECORD_AUDIO"
      ]
    },
    "web": {
      "bundler": "metro",
      "output": "static",
      "favicon": "./assets/images/favicon.png"
    },
    "plugins": [
      "expo-router",
      [
        "expo-image-picker",
        {
          "photosPermission": "Allow Yogilog to access your photos."
        }
      ],
      "./plugins/withWatermelonDB.js"
    ],
    "experiments": {
      "typedRoutes": true
    },
    "extra": {
      "router": {
         "origin": "https://yogilog.app"
      },
      "eas": {
        "projectId": "80300227-943a-43b9-8d01-0aa8b6257a95"
      }
    }
  }
}
